{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "**/__tests__/*"],
  "include": ["src"]
}
